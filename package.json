{
  "name": "helixon-wpp-bot",
  "version": "1.0.0",
  "description": "Bot de WhatsApp para vendas de Tirzepatida com integração MercadoPago e OpenAI",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate:create": "node-pg-migrate create",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "seed": "ts-node src/database/seed.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "whatsapp",
    "bot",
    "mercadopago",
    "openai",
    "tirzepatida"
  ],
  "author": "Helixon",
  "license": "MIT",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.20",
    "axios": "^1.6.7",
    "bottleneck": "^2.19.5",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "libphonenumber-js": "^1.10.58",
    "mercadopago": "^2.0.11",
    "node-cache": "^5.1.2",
    "node-pg-migrate": "^7.0.2",
    "openai": "^4.28.0",
    "pg": "^8.11.3",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "qrcode": "^1.5.3",
    "qrcode-terminal": "^0.12.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
